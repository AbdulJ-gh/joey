{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext"],
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "types": ["@cloudflare/workers-types"],
    "removeComments": true,
  },
  "exclude": [ "node_modules", "lib", "src/**/*.test.ts" ],
  "include": [ "src/**/*" ],
}
