{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext", "webWorker"],
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "types": ["@cloudflare/workers-types"],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "lib"
  ],
  "include": [
    "src/**/*",
    "typings/expect",
    "node_modules/@types/node/globals.d.ts",
    "node_modules/@cloudflare/workers-types"
  ]
}
