{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext"],
    "declaration": false,
    "outDir": "lib/bin",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "typeRoots": ["node_modules/@types"],
    "types": ["@types/node"],
    "removeComments": true
  },
  "include": ["bin"]
}
