{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schema/options",
  "type": "object",
  "properties": {
    "parsePath": { "type": "boolean", "default": true },
    "parseQuery": { "type": "boolean", "default": true },
    "cloneBody": { "type": "boolean", "default": false },
    "parseBody": { "enum": [ false, "content-type-header", null, "plaintext", "json", "formData", "urlEncodedFormData", "buffer", "blob" ], "default": "json" },
    "contentHeaderParseMap": {
      "type": "object",
      "properties": {
        "matchers": {
          "type": "array",
          "items": { "$ref": "https://example.com/schema/bodyParserMatcher" },
          "default": [
            { "query": "text", "bodyType": "plaintext" },
            { "query": "json", "bodyType": "json" },
            { "query": "form-data", "bodyType": "formData" },
            { "query": "form-urlencoded", "bodyType": "urlEncodedFormData" },
            { "query": "octet-stream", "bodyType": "buffer" }
          ]
        },
        "fallback": {
          "enum": [ null, "plaintext", "json", "formData", "buffer", "blob" ],
          "default": "json"
        }
      },
      "default": {}
    },
    "transformPathParams": { "type": "boolean", "default": true },
    "transformQueryParams": { "type": "boolean", "default": true },
    "validationErrors": { "type": "boolean", "default": true },
    "allValidationErrors": { "type": "boolean", "default": true },
    "prettifyJson": { "type": "boolean", "default": true },
    "emitAllowHeader": { "type": "boolean", "default": true },
    "headers": { "type": "object", "default": {} }
  }
}
