{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schema/bodyParserMatcher",
  "type": "object",
  "properties": {
    "query": { "type": "string" },
    "bodyType": {
      "enum": [null, "plaintext", "json", "formData", "urlEncodedFormData", "buffer", "blob"]
    },
    "matcher": {
      "enum": ["inclusive", "exact"],
      "default": "inclusive"
    }
  },
  "additionalProperties": false
}
